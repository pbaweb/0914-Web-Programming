<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Canvas API</title>
  </head>
  <style type="text/css">
    body{text-align:center;}
    canvas{border: 3px #CCC solid;margin: 100px;}
  </style>

<body>

    <canvas width="300" height="225" id="drawing"></canvas>
    <script>
        var canvas = document.getElementById('drawing'),
            context = canvas.getContext('2d');

        context.beginPath();
        context.moveTo(50, 50);
        context.lineTo(250, 150);
        context.stroke();
    </script>


    <canvas width="500" height="500" id="circle"></canvas>
    <script type="text/javascript">
        var circleCanvas = document.getElementById("circle");
        var circleContext = circleCanvas.getContext('2d');
        
        var canvasWidth = circleCanvas.width;
        var canvasHeight = circleCanvas.height;
        
        var angle = 0;
        
        var requestAnimationFrame = window.requestAnimationFrame || 
                                    window.mozRequestAnimationFrame || 
                                    window.webkitRequestAnimationFrame || 
                                    window.msRequestAnimationFrame;
        
        function drawCircle() {
            circleContext.clearRect(0, 0, canvasWidth, canvasHeight);
            
            // color in the background
            circleContext.fillStyle = "#EEEEEE";
            circleContext.fillRect(0, 0, canvasWidth, canvasHeight);
            
            // draw the circle
            circleContext.beginPath();
            
            var radius = 25 + 150 * Math.abs(Math.cos(angle));
            circleContext.arc(250, 250, radius, 0, Math.PI * 2, false);
            circleContext.closePath();
            
            // color in the circle
            circleContext.fillStyle = "#006699";
            circleContext.fill();
             
            angle += Math.PI / 64;
            
            requestAnimationFrame(drawCircle);
        }
        drawCircle();
    
    </script>
</body>
</html>
